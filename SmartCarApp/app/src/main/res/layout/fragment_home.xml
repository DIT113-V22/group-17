<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="491dp"
            android:layout_height="357dp"
            android:layout_marginTop="128dp"
            android:layout_weight="0.3"
            android:contentDescription="cameraView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/forward"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:rotation="90"
            android:text=""
            app:backgroundTint="@android:color/transparent"
            app:icon="@drawable/icons8_chevron_left_50"
            app:iconSize="100dp"
            app:iconTint="?attr/icon_color"
            app:layout_constraintBottom_toTopOf="@+id/stopCar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck"
            tools:visibility="visible" />

        <Button
            android:id="@+id/turnLeft"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text=""
            app:backgroundTint="@android:color/transparent"
            app:icon="@drawable/icons8_chevron_left_50"
            app:iconSize="100dp"
            app:iconTint="?attr/icon_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/stopCar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.829"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/turnRight"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:rotation="180"
            android:text=""
            app:backgroundTint="@android:color/transparent"
            app:icon="@drawable/icons8_chevron_left_50"
            app:iconSize="100dp"
            app:iconTint="?attr/icon_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/stopCar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.83"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
        android:id="@+id/reverse"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:rotation="270"
        android:text=""
        app:backgroundTint="@android:color/transparent"
        app:icon="@drawable/icons8_chevron_left_50"
        app:iconSize="100dp"
        app:iconTint="?attr/icon_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopCar"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/stopCar"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/pikpng_com_stop_png_439828"
            android:text=""
            app:backgroundTint="@android:color/transparent"
            app:iconTint="?attr/icon_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.831" />

        <Switch
        android:id="@+id/autoMode"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="40dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:switchMinWidth="60dp"
        android:text="Auto drive"
        android:textColor="?attr/text_color"
        android:textSize="20sp"
        android:thumbTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view"
            android:layout_width="115dp"
            android:layout_height="105dp"
            android:foreground="@drawable/speedometer_colour"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.594" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:autoSizeTextType="none"
            android:clickable="true"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="?attr/text_color"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.596" />

        <ImageView
            android:id="@+id/speechMic"
            android:layout_width="96dp"
            android:layout_height="86dp"
            android:layout_marginStart="56dp"
            android:clickable="true"
            android:onClick="mic"
            app:layout_constraintBottom_toTopOf="@+id/turnLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.836"
            app:srcCompat="@drawable/google_voice" />

        <TextView
            android:id="@+id/travelledDistance"
            android:layout_width="319dp"
            android:layout_height="46dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/forward"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.622"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.448" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
